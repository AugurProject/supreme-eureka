{
  "name": "@augurproject/smart",
  "version": "1.0.0-beta.0",
  "main": "dist",
  "repository": "https://github.com/AugurProject/turbo/packages/smart",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b --clean && yarn contracts:build && tsc -b",
    "prebuild:watch": "yarn contracts:build",
    "build:watch": "tsc -b -w",
    "build:typescript": "tsc -b",
    "test": "hardhat test",
    "contracts:build": "hardhat --config hardhat.typechain.config.ts typechain && hardhat compile",
    "contracts:deploy": "yarn hardhat deploy",
    "contracts:verify": "hardhat verify",
    "ethereumNode": "hardhat node --no-deploy",
    "generate:environments": "ts-node -e 'require(\"./src/utils/environments.ts\").generateJsonEnvironments()'"
  },
  "files": [
    "./contracts",
    "./src"
  ],
  "devDependencies": {
    "@eth-optimism/smock": "^0.2.1-alpha.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "3.4.0-solc-0.7",
    "@typechain/ethers-v5": "^6.0.3",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "axios": "0.21.1",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.1.1",
    "hardhat-abi-exporter": "^2.2.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.5",
    "hardhat-docgen": "^1.1.0",
    "hardhat-typechain": "^0.3.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "prettier-plugin-solidity": "^1.0.0-beta.6"
  }
}
