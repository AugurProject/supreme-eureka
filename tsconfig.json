{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "CommonJS",
    "outDir": "dist",
    "downlevelIteration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "watch": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "node_modules/hardhat/types"]
  },
  "include": ["./scripts", "./test"],
  "exclude": ["**/node_modules", "**/build", "dist"],
  "files": ["./hardhat.config.ts"]
}
